extends layout

block content
  h1=title

  form(method='POST' action='/api/courses/create')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Course name' name='name' required='true' value=(undefined===course ? '' : course.name) )
      label(for='code') Code:
      input#code.form-control(type='text', placeholder='Code (CSE123)' name='code' required='true' value=(undefined===course ? '' : course.code) )
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Optional Description' name='description' value=(undefined===course ? '' : course.description))
     
     
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
        li= errors
    